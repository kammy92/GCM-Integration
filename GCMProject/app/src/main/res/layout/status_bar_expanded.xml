<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/notificationbg"
    android:layout_width="fill_parent"
    android:layout_height="128.0dip"
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/status_bar_album_art"
        android:layout_width="@dimen/status_bar_album_art"
        android:layout_height="@dimen/status_bar_album_art"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/status_bg"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="?android:listDivider"
        android:layout_toRightOf="@id/status_bar_album_art"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:showDividers="middle"
        android:dividerPadding="12.0dip" android:layout_below="@+id/imageView">

        <ImageButton
            android:id="@+id/ibNotificationHappy"
            android:background="?android:selectableItemBackground"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:src="@drawable/ic_happy"
            android:scaleType="fitCenter"
            android:layout_weight="1.0"/>
        <ImageButton
            android:id="@+id/ibNotificationNeutral"
            android:background="?android:selectableItemBackground"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:src="@drawable/ic_neutral"
            android:scaleType="fitCenter"
            android:layout_weight="1.0"/>
        <ImageButton
            android:id="@+id/ibNotificationSad"
            android:background="?android:selectableItemBackground"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:src="@drawable/ic_sad"
            android:scaleType="fitCenter"
            android:layout_weight="1.0"/>
    </LinearLayout>
    <ImageView
        android:background="?android:dividerHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="1.0px"
        android:layout_toRightOf="@id/status_bar_album_art"
        android:layout_below="@+id/status_bar_album_art"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/status_bar_album_art" android:id="@+id/imageView"/>
    <ImageButton
        android:id="@+id/ibNotificationCancel"
        android:background="?android:selectableItemBackground"
        android:padding="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/textarea"
        android:paddingLeft="@dimen/notification_padding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ibNotificationCancel"
        android:layout_toRightOf="@id/status_bar_album_art"
        android:layout_alignParentTop="true"
        android:weightSum="1.0"
        android:layout_alignBottom="@+id/status_bar_album_art">
        <TextView
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="How are you feeling today?"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_weight="1.0"
            android:id="@+id/textView"/>
    </LinearLayout>
</RelativeLayout>